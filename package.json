{
	"name": "ogonek-carta",
	"type": "module",
	"module": "esnext",
	"version": "0.0.0-development",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Ogonek-Education/ogonek-carta.git"
	},
	"scripts": {
		"core": "cd packages/carta-md && pnpm run dev",
		"check": "cd packages/carta-md && pnpm run check",
		"build": "node scripts/build.js",
		"publish": "node scripts/publish.js",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.20.0",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.15.0",
		"lint-staged": "^13.3.0",
		"ora": "^6.3.1",
		"prettier": "3.1.0",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte-eslint-parser": "^0.43.0",
		"typescript": "catalog:"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint --cache --fix --no-error-on-unmatched-pattern",
		"*.{js,ts,css,md,svelte,html,yml,json,cjs}": "prettier --write"
	}
}

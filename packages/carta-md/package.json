{
	"name": "carta-md",
	"description": "A lightweight, fully customizable, Markdown editor",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/@Ogonek-Education/ogonek-carta.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js"
		},
		"./default.css": "./dist/default.css"
	},
	"version": "3.9.0",
	"scripts": {
		"dev": "vite dev",
